<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chichore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chichore"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".Activites.GroupChatActivity"></activity>
        <activity
            android:name=".Activites.ChatActivity"
            android:theme="@style/Theme.Chichore.NoActionBar" />
        <activity android:name=".Activites.SetupProfileActivity" />
        <activity
            android:name=".Activites.OTPActivity"
            android:windowSoftInputMode="stateVisible">
            >
        </activity>
        <activity
            android:name=".Activites.PhoneNumberActivity"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activites.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>